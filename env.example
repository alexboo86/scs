# Secret key для JWT токенов (обязательно измените в продакшене!)
SECRET_KEY=your-secret-key-change-in-production

# URL базы данных
DATABASE_URL=sqlite:///./data/database.db

# Разрешенные домены для CORS (через запятую)
# Замените YOUR_EXTERNAL_IP на ваш внешний IP адрес
ALLOWED_ORIGINS=http://YOUR_EXTERNAL_IP:8000,https://incrypto.tilda.ws

# Разрешенные домены для встраивания viewer (проверка Referer)
# Укажите домены вашего сайта Tilda через запятую
ALLOWED_EMBED_DOMAINS=incrypto.tilda.ws

# Требовать проверку Referer для viewer (защита от прямого доступа)
# Установите true для включения защиты
REQUIRE_REFERER_CHECK=false

# Максимальный размер файла (в байтах)
MAX_FILE_SIZE=52428800

# Время жизни токена доступа (в часах)
TOKEN_EXPIRY_HOURS=24

# Настройки водяных знаков по умолчанию
DEFAULT_WATERMARK_OPACITY=0.25
DEFAULT_WATERMARK_FONT_SIZE=48

# Путь к статическим водяным знакам (логотип школы)
STATIC_WATERMARK_PATH=/app/static_watermarks/logo.png
